generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  dcUserName String
  avatar     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  admin     Boolean        @default(false)
  name      String?
  resources ResourceAuthors[]

  solved     Problem[]
  sessionIds SessionId[]
}

model SessionId {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Category {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  topics    Topic[]
}

model Topic {
  id            String         @id
  category      Category       @relation(references: [id], fields: [categoryId], onDelete: Cascade)
  categoryId    String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  name          String         @unique
  resourceItems ResourceItem[]
}

model ResourceItem {
  id        String
  title     String
  public    Boolean  @default(false)
  topic     Topic    @relation(references: [id], fields: [topicId], onDelete: Cascade)
  topicId   String
  authors   ResourceAuthors[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  description String?
  content     String

  @@id([id, topicId])
}

model ResourceAuthors {
  resource ResourceItem @relation(fields: [resourceId, topicId], references: [id, topicId])
  resourceId String
  topicId    String
  author User @relation(fields: [authorId], references: [id])
  authorId String
  @@id([resourceId, topicId, authorId])
}

model Problem {
  id             String @id
  title          String
  url            String
  ratingEstimate Int
  solvers        User[]
}
